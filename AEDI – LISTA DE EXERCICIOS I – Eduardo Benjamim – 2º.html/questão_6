#include <stdio.h>

int main() {
    float tempo, velocidade_media, distancia, litros_usados;
    float km_por_litro = 12.0;
    
    
    printf("Digite o tempo gasto na viagem (em horas): ");
    scanf("%f", &tempo);
    
    
    printf("Digite a velocidade média durante a viagem (em km/h): ");
    scanf("%f", &velocidade_media);
    
   
    distancia = tempo * velocidade_media;
    
   
    litros_usados = distancia / km_por_litro;
    
   
    printf("A distância percorrida foi de: %.2f km\n", distancia);
    printf("A quantidade de litros de gasolina utilizados foi de: %.2f litros\n", litros_usados);
    
    return 0;
}
